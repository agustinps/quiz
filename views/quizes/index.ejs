<form id="formBuscar" method="get" action="/quizes/busqueda">
<input type="text" name="search" placeholder="Texto a buscar">
<input type="submit" value="Buscar">
</form>
<br/>
<hr/>
<br/>
<table>
  <% var i; for(i=0; i<quizes.length; i++) { %>
    <tr>
      <td>
        <a href="<% if(search !== 'si') {%> quizes/<% } %><%= quizes[i].id %>">
        <%= quizes[i].pregunta %></a>
      </td>
      <td>
        <a href="<% if(search !== 'si') {%> quizes/<% } %><%= quizes[i].id %>/edit">
        <button>editar</button></a>
      </td>
      <td>
        <form method="post" action="<% if(search !== 'si') {%> quizes/<% } %><%= quizes[i].id %>?_method=delete">
          <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
            borrar
          </button>
        </form>
      </td>
    </tr>
  <% } %>
</table>
<p>
<a href="<% if(search !== 'si') {%> quizes/<% } %>new">
  <button type="button">Crear pregunta</button>
</a>
