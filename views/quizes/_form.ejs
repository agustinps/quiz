<label for="preg" class="rem">
  Pregunta:
</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" />
<label for="resp" class="rem">
  Respuesta:
</label>
<input type="text" id="res" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
<select name="quiz[tema]">
 <option value="Otro" <% if (quiz.tema === 'Otro'){%> selected <%}%>>Otro</option>
 <option value="Geografía" <% if (quiz.tema === 'Geografía'){%> selected <%}%>>Geografía</option>
 <option value="Ocio" <% if (quiz.tema === 'Ocio'){%> selected <%}%>>Ocio</option>
 <option value="Ciencia" <% if (quiz.tema === 'Ciencia'){%> selected <%}%>>Ciencia</option>
 <option value="Tecnología" <% if (quiz.tema === 'Tecnología'){%> selected <%}%>>Tecnología</option>
</select>


<a href="/quizes">
  <button type="button">Cancelar</button>
</a>
<input type="submit" value="Salvar">
